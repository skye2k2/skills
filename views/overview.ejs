              </p>
            </div>
          </div>
        </div>
      </details>

    </article>
  </main>

<script type="text/javascript">
$(window).on('hashchange', function() {
  openProjectDetails();
});

$(document).ready(function(){
  openProjectDetails();
});

function openProjectDetails() {
  if (document.location.hash) {
    $(".project").attr("open", false);
    $("#user-content-" + document.location.hash.slice(1)).parents(".project").attr("open", true);
  }
}
</script>

