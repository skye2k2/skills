body
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+0,effff6+40,eeeeee+100 */
  background: #ffffff /* Old browsers */
  background: -moz-linear-gradient(left,  #ffffff 0%, #effff6 40%, #eeeeee 100%) /* FF3.6-15 */
  background: -webkit-linear-gradient(left,  #ffffff 0%,#effff6 40%,#eeeeee 100%) /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to right,  #ffffff 0%,#effff6 40%,#eeeeee 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin: 0 auto
  max-width: 1280px
  min-width: 475px

.project
  background-color: #fff
  border: 1px solid #999
  border-radius: 5px
  margin-bottom: 10px
  padding: 5px

.project summary
  cursor: pointer
  font-size: 18px

.description-block
  text-align: justify

.demonstrates-block:before
  content: "Demonstrates:"
  display: inline-block

.demonstrates-block .tag
  background: #eee
  border: 1px solid #999
  border-radius: 4px
  display: inline-block
  margin: 4px 1px
  padding: 5px

.flex-container
  display: -ms-flexbox
  display: -webkit-flex
  display: flex
  -webkit-flex-direction: row
  -ms-flex-direction: row
  flex-direction: row
  -webkit-flex-wrap: nowrap
  -ms-flex-wrap: nowrap
  flex-wrap: nowrap
  -webkit-justify-content: flex-start
  -ms-flex-pack: start
  justify-content: flex-start
  -webkit-align-content: stretch
  -ms-flex-line-pack: stretch
  align-content: stretch
  -webkit-align-items: flex-start
  -ms-flex-align: start
  align-items: flex-start

.flex-item
  -webkit-flex: 1 1 auto
  -ms-flex: 1 1 auto
  flex: 1 1 auto
  padding: 5px
  width: 100%

/* BEGIN BOOTSTRAP OVERRIDES */
.navbar
  -webkit-box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.4)
  -moz-box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.4)
  box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.4)
  -webkit-transition: 0.2s
  transition: 0.2s

.navbar:hover
  -webkit-box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.95)
  -moz-box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.95)
  box-shadow: 2px 4px 10px 2px rgba(110,110,110,0.95)

.navbar-brand
  padding: 8px

.navbar-brand>img
  max-height: 100%

/* END BOOTSTRAP OVERRIDES */

/* Gag breakpoint, for people who try to go narrower than 425px */
@media (max-width: 425px)
  *
    display: none !important
  html, head, body
    display: block !important
  body
    background-image: url("/images/gonna-get-you.gif")
    background-repeat: repeat-y
    background-size: 100%
  body:before
    content: "Gonna get you for trying to break my app!"
    font-size: 18px
    position: absolute
    top: 9.5em
    width: 100%
    left: 0
    text-align: center

@media (max-width: 640px)
  article h1, article h2
    font-size: 20px


@media (max-width: 767px)
  .flex-container
    -webkit-flex-direction: column
    -ms-flex-direction: column
    flex-direction: column

  .flex-item
    width: 100%

@media print
  body
    padding-top: 0
